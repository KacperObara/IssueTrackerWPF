<Window x:Class="IssueTrackerWPFUI.NewIssue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssueTrackerWPFUI"
        mc:Ignorable="d"
        Title="NewIssue" Height="450" Width="800">
    <Grid Margin="20">

        <StackPanel Background="#f0f1f2">
            <TextBlock Text="Title" HorizontalAlignment="Left" Width="Auto" FontSize="20"/>
            <TextBox Height="Auto"/>
            <TextBlock Text="Description" HorizontalAlignment="Left" Width="Auto" FontSize="20"/>
            <RichTextBox VerticalScrollBarVisibility="Auto" MinHeight="200" MaxHeight="400" Height="Auto" Block.LineHeight="1"/>
            <TextBlock Text="Severity" HorizontalAlignment="Left" Width="Auto" FontSize="20"/>
            <ComboBox/>
            <Button Content="Create" MinWidth="75"  MinHeight="25"  HorizontalAlignment="Right" Margin="20" />
        </StackPanel>
    </Grid>
</Window>
