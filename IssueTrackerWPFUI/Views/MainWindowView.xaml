<Window x:Class="IssueTrackerWPFUI.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssueTrackerWPFUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="60">
            <Button x:Name="NewIssue" Margin="10" VerticalAlignment="Center" Width="Auto">
                <TextBlock Text="New Issue" TextAlignment="Center"/>
            </Button>

            <Button x:Name="NewPerson" Margin="10" VerticalAlignment="Center" Width="Auto">
                <TextBlock Text="New Person TMP" TextAlignment="Center"/>
            </Button>
        </StackPanel>

        <!--<DataGrid Grid.Row="2" AutoGenerateColumns="True"/>-->
        <ContentControl Grid.Row="2" x:Name="ActiveItem" />

    </Grid>
</Window>
